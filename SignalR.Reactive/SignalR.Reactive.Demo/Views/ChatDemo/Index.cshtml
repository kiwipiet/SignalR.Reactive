<style >

    html, body {
        height: 100%;
        width: 100%;
    }

    body { position: relative; }

    #wrapper {
        border: 1px solid #333;
        bottom: 0;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
    }

    #upperPanel {
        bottom: 100px;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
    }

    #chat {
        background: #666;
        bottom: 0;
        left: 0;
        overflow: auto;
        position: absolute;
        right: 200px;
        top: 0;
    }

    #groups {
        background: #999;
        bottom: 0;
        overflow: auto;
        position: absolute;
        right: 0;
        top: 0;
        width: 200px;
    }

    #groups ul {
        padding: 0;
        text-align: left;
    }

    #groups li { list-style: none; }

    #bottomPanel {
        background: #EEE;
        bottom: 0px;
        height: 100px;
        left: 0px;
        position: absolute;
        right: 0px;
    }

    #bottomPanel textarea {
        bottom: 10px;
        left: 10px;
        position: absolute;
        resize: none;
        right: 120px;
        top: 10px;
    }

    #bottomPanel input[type=submit] {
        bottom: 10px;
        position: absolute;
        right: 10px;
        top: 10px;
        width: 100px;
    }
    

</style>


<div id="wrapper">
    <div id="upperPanel">
        <div id="chat">
            <ul id="message-list">

            </ul>
        </div>
        <div id="groups">
            <ul id="groups-list">
            </ul>
        </div>
    </div>
    <div id="bottomPanel">
        <textarea id="inputField">
            
        
        </textarea>
        <input id="chat-send" type="submit" value="send"/>
    </div>
</div>

<script type="text/javascript" src="/signalr/hubs"></script>
<script type="text/javascript">

    $(function() {
        var myHub = $.connection.rxHub,
            $inputsendBtn = $('#chat-send'),
            $input = $('#inputField'),
            $messageList = $('#message-list'),
            $groupsList = $('#groups-list');

        var group = window.prompt("Join a Group?", "");
        var $li = $('<li>').text(group);
        $groupsList.append($li);

        myHub.server.observe('NewMessage')
            .subscribe(function(message) {
                window.console && console.log(message);
                var $li = $('<li>').text(message);
                $messageList.append($li);
            });

        $.connection.hub.start()
            .done(function() {
                myHub.server.join(group);
                $inputsendBtn.click(function() {
                    myHub.server.sendMessage($input.val(), group);
                    $input.val('');
                });
            });

    });
</script>